<!DOCTYPE html>
<html>
<head>
	<title><%= yield(:title) %></title>
	<%#= stylesheet_link_tag :all %>
	<%= stylesheet_link_tag 'theme', 'menu', 'superfish', 'coderay' %>
	<%#= javascript_include_tag 'jquery', 'jquery-ui', 'jquery.delayed-observer', 'application', 'hoverIntent', 'superfish' %>
	<%= javascript_include_tag 'prototype', 'scriptaculous', 'jquery', 'jquery-ui', 'jquery.delayed-observer', 'application' %>
  <script>
    // this allows jquery to be called along with scriptaculous and YUI without any conflicts
    // the only difference is all jquery functions should be called with $j instead of $
    // e.g. $j('#div_id').stuff instead of $('#div_id').stuff
    var $j = jQuery.noConflict();
  </script>
  <%#= javascript_include_tag :defaults %>
	
  <% if protect_against_forgery? %>
	<script type='text/javascript'>
		//<![CDATA[
			window._auth_token_name = "#{request_forgery_protection_token}";
			window._auth_token = "#{form_authenticity_token}";
		//]]>
		</script>
	<% end %>
  <%= javascript_include_tag 'menu' %>
  <script type="text/javascript">
  		// initialize plugins
  		$j(document).ready(function(){
      	$j('ul.sf-menu').superfish();
  		});
  		</script>
  <%#= javascript_include_tag 'application' %>
	<%#= active_scaffold_includes %>
	<%= yield(:head) %>
</head>
<body>
	<div id="container">
		<ul class="skip">
			<li><a href="#wrapper">Skip to content</a></li>
			<li><a href="#menu">Skip to menu</a></li>
		</ul>
		<hr />
		<div id="header">
		  <div id="header_ruby">
			<h1><a href="/">Ruby Tuesday</a></h1>
			<p class="payoff">Simple Fresh Elegant Syntax</p>
			<form id="searchform" method="get" action="http://rubywednesday.com">
				<div>
					<label for="s">Search</label>
					<input type="text" name="s" size="15" value="search..." />
					<button type="submit"><img src="images/cerca.jpg" alt="search" /></button>
				</div>
			</form>
      <%= render "shared/sign_in_out" %>
			<p id="rss"><a href="http://rubywednesday.com/feed/" title="Subscribe"><img src="/images/rss.jpg" alt="Rss 2.0" /></a></p>
			<div id="menu1">
				<ul class="sf-menu">
					<li class="page_item current_page_item"><a href="/" title="Homepage">Home</a></li>
					<li class="page_item">
					  <a href="/articles">Articles</a>
					  <ul>
					    <li>
					      <a href="/articles/chapters_and_sections">Chapters and Sections</a>
					      <ul>
                  <%= render :partial => "shared/top_nav_category", :collection => @categories %>
					      </ul>
					    </li>
					    <li><a href="/articles/search">Search</a></li>
				      <li><a href="/articles/guidelines">Post an Article</a></li>
				      <li><a href="/articles/guidelines">Posting/Update Guidelines</a></li>
					  </ul>
					</li>
					<li class="page_item">
					  <a href="/questions">Questions &amp; Answers</a>
					  <ul>
					    <li><a href="/questions/search">Search</a></li>
					  </ul>
					</li>
					<li class="page_item"><a href="/learning_zones">Learning Zones</a></li>
				</ul>
			</div>
		</div>
		</div>
		<hr />
		<div id="wrapper" class="wrapper">
			<div id="content_no_left_nav">
				<%#= render "shared/top_nav" %>
				<hr />
				<p class="notice"><%= flash[:notice] %></p>
				<p class="alert"><%= flash[:alert] %></p>
				<%= yield %>
			</div>
      <div class="push"></div>
		</div>
		<hr />
		<div id="footer" class="footer">
			<p class="up"><a href="#header" title="Jump to the top of the page">top</a></p>
			<p class="credit">Powered by <a href="" title="Powered by Ruby on Rails"><strong>Ruby on Rails</strong></a></p>
		</div>
	</div>
</body>
</html>
